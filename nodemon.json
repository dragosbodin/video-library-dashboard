{
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules", "src/client", "*.test.ts", "*.spec.ts"],
    "verbose": true,
    "exec": "node --loader ts-node/esm --import=extensionless/register",
    "watch": ["src/server"],
    "ext": "js,json,ts",
    "env": {
        "NODE_TLS_REJECT_UNAUTHORIZED": "0",
        "TS_NODE_PROJECT": "tsconfig.server.json"
    }
}
